{
  "title": "Micro Chat - Auth Service",
  "uid": "micro-chat-auth",
  "tags": ["micro-chat", "auth"],
  "timezone": "browser",
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Requests per Second by Method",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum by (method) (rate(micro_chat_grpc_auth_request_total[1m]))",
          "legendFormat": "{{method}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Latency by Method",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum by (method, le) (rate(micro_chat_grpc_auth_request_duration_seconds_bucket[5m])))",
          "legendFormat": "{{method}} p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum by (method, le) (rate(micro_chat_grpc_auth_request_duration_seconds_bucket[5m])))",
          "legendFormat": "{{method}} p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (method, le) (rate(micro_chat_grpc_auth_request_duration_seconds_bucket[5m])))",
          "legendFormat": "{{method}} p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Request Status",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum by (status) (increase(micro_chat_grpc_auth_request_total[1h]))",
          "legendFormat": "{{status}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        }
      }
    },
    {
      "id": 4,
      "title": "Errors by Method",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum by (method, status) (rate(micro_chat_grpc_auth_request_total{status!=\"OK\"}[5m]))",
          "legendFormat": "{{method}} - {{status}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 50
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Requests In Flight",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "micro_chat_grpc_auth_requests_in_flight",
          "legendFormat": "In Flight"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "value": null, "color": "green" },
              { "value": 50, "color": "yellow" },
              { "value": 100, "color": "red" }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area"
      }
    },
    {
      "id": 6,
      "title": "Total Requests",
      "type": "stat",
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum(increase(micro_chat_grpc_auth_request_total[24h]))",
          "legendFormat": "24h Total"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 7,
      "title": "Average Latency",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum(rate(micro_chat_grpc_auth_request_duration_seconds_sum[5m])) / sum(rate(micro_chat_grpc_auth_request_duration_seconds_count[5m]))",
          "legendFormat": "Avg Latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0,
          "max": 1,
          "thresholds": {
            "steps": [
              { "value": null, "color": "green" },
              { "value": 0.1, "color": "yellow" },
              { "value": 0.5, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Latency Heatmap",
      "type": "heatmap",
      "gridPos": { "h": 8, "w": 16, "x": 8, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum(increase(micro_chat_grpc_auth_request_duration_seconds_bucket[1m])) by (le)",
          "legendFormat": "{{le}}",
          "format": "heatmap"
        }
      ],
      "options": {
        "calculate": false,
        "cellGap": 1,
        "color": {
          "scheme": "Oranges"
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus"
      }
    ]
  },
  "schemaVersion": 38
}