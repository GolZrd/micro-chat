{
  "title": "Micro Chat - Overview",
  "uid": "micro-chat-overview",
  "tags": ["micro-chat"],
  "timezone": "browser",
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Services Status",
      "type": "stat",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "up{job=\"auth\"}",
          "legendFormat": "Auth Service"
        },
        {
          "expr": "up{job=\"chat-server\"}",
          "legendFormat": "Chat Server"
        },
        {
          "expr": "up{job=\"web-gateway\"}",
          "legendFormat": "Web Gateway"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" } } },
            { "type": "value", "options": { "1": { "text": "UP", "color": "green" } } }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "red" },
              { "value": 1, "color": "green" }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "auto"
      }
    },
    {
      "id": 2,
      "title": "Requests per Second (All Services)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum(rate(micro_chat_grpc_auth_request_total[1m]))",
          "legendFormat": "Auth Service"
        },
        {
          "expr": "sum(rate(micro_chat_grpc_chat_server_request_total[1m]))",
          "legendFormat": "Chat Server"
        },
        {
          "expr": "sum(rate(micro_chat_http_web_gateway_request_total[1m]))",
          "legendFormat": "Web Gateway"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Latency p99 (All Services)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(micro_chat_grpc_auth_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "Auth Service"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(micro_chat_grpc_chat_server_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "Chat Server"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(micro_chat_http_web_gateway_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "Web Gateway"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Error Rate %",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum(rate(micro_chat_grpc_auth_request_total{status!=\"OK\"}[5m])) / sum(rate(micro_chat_grpc_auth_request_total[5m])) * 100",
          "legendFormat": "Auth Service"
        },
        {
          "expr": "sum(rate(micro_chat_grpc_chat_server_request_total{status!=\"OK\"}[5m])) / sum(rate(micro_chat_grpc_chat_server_request_total[5m])) * 100",
          "legendFormat": "Chat Server"
        },
        {
          "expr": "sum(rate(micro_chat_http_web_gateway_request_total{status=~\"4..|5..\"}[5m])) / sum(rate(micro_chat_http_web_gateway_request_total[5m])) * 100",
          "legendFormat": "Web Gateway"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 1, "color": "yellow" },
              { "value": 5, "color": "red" }
            ]
          },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Active Requests",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "micro_chat_grpc_auth_requests_in_flight",
          "legendFormat": "Auth Service"
        },
        {
          "expr": "micro_chat_grpc_chat_server_requests_in_flight",
          "legendFormat": "Chat Server"
        },
        {
          "expr": "micro_chat_http_web_gateway_requests_in_flight",
          "legendFormat": "Web Gateway"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 20
          }
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": { "selected": true, "text": "Prometheus", "value": "Prometheus" }
      }
    ]
  },
  "schemaVersion": 38
}